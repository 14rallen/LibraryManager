@using BusinessObjects
@model BusinessObjects.Customer
@{
    ViewBag.Title = "Edit Profile";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("EditProfile", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    if(Session["AccessToken"] != null)
    {
        AccessToken accessToken = (AccessToken)Session["AccessToken"];
        Customer user = accessToken.User;
        
        @Html.AntiForgeryToken()
        <h4>Update your account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { style = "visibility: collapse", @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { @Value = accessToken.User.UserName, style = "visibility: collapse", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @Value = accessToken.User.FirstName, @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @Value = accessToken.User.LastName, @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @Value = accessToken.User.Email, @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Phone, new { @Value = accessToken.User.Phone, @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { style = "visibility: collapse", @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @Value = accessToken.User.Password, style = "visibility: collapse", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Edit" />
            </div>
        </div>
    }
